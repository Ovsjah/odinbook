<!DOCTYPE html>
<html>
  <head>
    <title>Odinbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
  </head>
  <body>
    <% if user_signed_in? %>
      <header>
        <%= render 'layouts/topbar' %>
      </header>
    <% else %>
      <div class='container col-lg-5 text-warning'>
        <%= image_tag 'odin-logo.svg' %>
        <h2 class='d-inline font-weight-bold'>The Odinbook</h2>
      </div>
    <% end %>
    <main role='main' class='container col-lg-5 col-md-8 mx-auto mt-5 px-0'>
      <%= render 'layouts/flash_messages' %>
      <%= yield %>
    </main>
  </body>
</html>
