<div class='container'>
  <% flash.each do |message_type, message| %>
    <div class = "alert alert-<%= to_bootstrap_flash(message_type) %> text-center mt-3">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= content_tag :div, message.html_safe, id: "flash_#{message_type}" %>
    </div>
  <% end %>
</div>
