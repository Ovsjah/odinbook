<div class='container'>
  <div class='col-lg-8 col-md-10 mx-auto'>
    <button class='btn btn-block btn-outline-warning rounded-pill mt-3' data-toggle="modal" data-target="#create_post">
      <span class='h5'>What's on your mind, <%= current_user.username %>?</span>
    </button>
    <%= render 'post_form_modal', post: current_user.posts.build, type: 'create_post' %>
    <%= render @recent_posts %>
  </div>
</div>
