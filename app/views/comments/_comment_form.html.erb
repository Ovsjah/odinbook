<%= form_with model: comment, data: { action: submit == 'Comment' ? 'post-footer#commentSubmit' : 'comments#formSubmit', target: 'comments.form'}, class: "my-2#{' d-none' unless submit == 'Comment'}" do |f| %>
  <%= f.hidden_field :post_id, value: comment.post.id, id: "comment_post_id_#{comment.post.id}" %>
  <%= f.text_area :content, rows: 1, placeholder: 'Write a comment...', id: "comment_content_post_id_#{comment.post.id}", class: 'form-control form-control-sm' %>
  <div class='btn-toolbar mt-2'>
    <button type='button' class='btn btn-secondary btn-sm mr-1' <%= submit == 'Comment' ? "data-action=post-footer#comment" : "data-action=comments#manageForm" %>>Cancel</button>
    <%= f.submit submit, class: 'btn btn-sm btn-warning' %>
  </div>
<% end %>
